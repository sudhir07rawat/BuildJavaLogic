<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/uploadImage"
        android:text="Upload Images"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/innerLayout"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border"
        android:layout_below="@+id/uploadImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/hotelLabel"
            android:text="Hotel Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/hotelText"
            android:hint="Hotel/PG Name"
            android:paddingLeft="20dp"
            android:background="@drawable/edittext_border"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/hotelLabel"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/typeLabel"
            android:text="Type"
            android:textSize="18sp"
            android:layout_below="@+id/hotelText"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/typeText"
            android:hint="PG"
            android:paddingLeft="20dp"
            android:background="@drawable/edittext_border"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/drop"
            android:layout_below="@+id/typeLabel"
            android:layout_width="match_parent"
            android:layout_height="50dp" />


    </RelativeLayout>


</RelativeLayout>